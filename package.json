{
  "name": "photoslide",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "https://github.com/warrengalyen/photoslide.git",
  "author": "Warren Galyen",
  "license": "MIT",
  "scripts": {
    "dev": "vue-cli-service serve --host 0.0.0.0 --port 3000",
    "build": "rm -rf docs && vue-cli-service build --mode production --no-module",
    "electron-dev": "electron ./main.js --dev",
    "electron-build": "rm -rf dist && yarpm run electron:mac && yarpm run electron:win",
    "electron:mac": "electron-builder --mac --dir ",
    "electron:win": "electron-builder --win nsis --dir --x64 && rm -rf dist/win-unpacked"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "build": {
    "appId": "mechanika.photoslide",
    "productName": "Photoslide",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "resource/icons/icon.ico"
    },
    "mac": {
      "target": "default",
      "icon": "resource/icons/icon.icns",
      "category": "public.app-category.entertainment"
    }
  },
  "dependencies": {
    "vue": "^3.2.47",
    "vue-i18n": "^9.2.2",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.2.47",
    "electron": "^24.3.1",
    "electron-builder": "^22.11.4",
    "sass": "^1.62.1",
    "sass-loader": "^10.1.1",
    "yarpm": "^1.1.1"
  }
}
